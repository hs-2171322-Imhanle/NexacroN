          <Column id="SUBTITLE" type="STRING" size="256"/>
          <Column id="START_VALUE" type="INT" size="256"/>
          <Column id="RATE" type="INT" size="256"/>
          <Column id="DATE" type="DATE" size="256"/>
          <Column id="GROUP_CODE" type="INT" size="256"/>
          <Column id="UNIT_CODE" type="INT" size="256"/>
        </ColumnInfo>
      </Dataset>
    </Objects>
