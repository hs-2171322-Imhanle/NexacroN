    </Layouts>
    <Script type="xscript5.1"><![CDATA[

this.btnSave_onclick = function(obj:nexacro.Button,e:nexacro.ClickEventInfo)
{		
		var strSvcId    = "save";
		var strSvcUrl   = "stock/saveBasic.do";
		var inData      = "ds_info=ds_info:U";
		var outData     = "";
		var sParam      = "";
		var callBackFnc = "fnCallback";
		
		if(this.tabStock.tabindex == 0){
			sParam = "TYPE=RECORD"
		}
		else{
			sParam = "TYPE=STOCK"
		}
				
		this.gfnTransaction(strSvcId ,
							strSvcUrl ,
							inData ,
							outData ,
							sParam,
							callBackFnc);
							

};

this.fnCallback = function (svcID, errorCode, errorMsg)
{
	//alert("성공" + errorMsg); 
};	

this.stock0040_onload = function(obj:nexacro.Form,e:nexacro.LoadEventInfo)
{
 	this.ds_info.clearData();
 	this.ds_info.addRow();
};
]]></Script>
    <Objects>
